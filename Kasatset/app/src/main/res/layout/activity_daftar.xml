<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/foto_warga"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_img_view"
            android:contentDescription="Avatar"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/nama_warga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asep si kasep"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jl. suka maju no.232"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exampel@gmail.com"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomor_telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0896676767"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jumlah_iuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 200.000"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tanggal_pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-02-04"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <!-- Tambahkan elemen-elemen yang diperlukan di sini -->
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
